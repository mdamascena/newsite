{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": "./",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
  
}
